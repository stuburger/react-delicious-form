{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "lib": ["es7", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}